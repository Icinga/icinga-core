CGIEXTRAS=@CGIEXTRAS@

###############################
# snprintf (Solaris)
###############################
SNPRINTF_O=@SNPRINTF_O@

###############################
# Tools
###############################
MKDIR=/bin/mkdir

###############################
# Global
###############################
ICINGA_VERSION=1.8.1

CP=@CP@

@SET_MAKE@

